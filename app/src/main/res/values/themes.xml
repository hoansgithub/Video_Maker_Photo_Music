<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main app theme - Must extend AppCompat for AppCompatActivity + per-app language API -->
    <style name="Theme.VideoMaker" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize as needed for Compose - Compose handles its own Material theming -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Android 12+ Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set background color -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Set splash screen icon -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>

        <!-- Icon background color -->
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

        <!-- Set the theme for the Activity after splash -->
        <item name="postSplashScreenTheme">@style/Theme.VideoMaker</item>
    </style>
</resources>
